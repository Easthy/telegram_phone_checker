# Конфигурационный файл для Telegram Phone Checker
# Поддерживает множественные аккаунты и настройки пауз

# Список аккаунтов Telegram для ротации
accounts:
  - phone_number: '+123456789'
   api_id: 000000
   api_hash: '41c4648ec0193791c245f1543a221444'
   request_pause_min: 140
   request_pause_max: 190
   account_daily_limit: 10
   device_model: Xiaomi 13 Pro
   system_version: Android 14
   app_version: 10.9.1

# Общие настройки
settings:
  # Пауза между обработкой разных батчей (пачек) номеров
  batch_pause_seconds: 300  # По умолчанию 5 минут
  
  # Глобальные настройки пауз между запросами (если не указаны для аккаунта)
  request_pause_min: 120
  request_pause_max: 180
